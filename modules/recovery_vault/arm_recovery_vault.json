{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "String"
    },
    "location": {
      "type": "String"
    },
    "resourceGroupName": {
      "type": "String"
    },
    "resourceTags": {
      "type": "Object"
    }
  },
  "resources": [
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.RecoveryServices/vaults",
      "apiVersion": "2016-06-01",
      "location": "[parameters('location')]",
      "tags": "[parameters('resourceTags')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
      },
      "sku": {
        "name": "RS0",
        "tier": "Standard"
      }
    }
  ],
  "outputs": {
    "id": {
      "type": "string",
      "value": "[resourceId(parameters('resourceGroupName'), 'Microsoft.RecoveryServices/vaults', parameters('name'))]"
    },
    "principalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.RecoveryServices/vaults', parameters('name')), '2020-10-01', 'full').identity.principalId]"
    }
  }
}